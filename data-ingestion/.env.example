# Environment variables for data ingestion and knowledge base processing
PINECONE_API_KEY=your_pinecone_api_key_here
HUGGINGFACE_HUB_TOKEN=your_huggingface_hub_token_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Pinecone environment (default: us-east-1)
PINECONE_ENVIRONMENT=us-east-1

# Index name for storing document embeddings
INDEX_NAME=aven-knowledge-base

# Optional: Embedding model (default: llama-text-embed-v2)
EMBEDDING_MODEL=llama-text-embed-v2

